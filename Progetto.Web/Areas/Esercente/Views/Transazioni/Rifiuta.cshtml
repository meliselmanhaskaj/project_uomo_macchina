@model Progetto.Web.Areas.Esercente.ViewModels.RifiutaUtilizzoViewModel

@{
    ViewData["Title"] = "Rifiuta Utilizzo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-x-circle-fill"></i> Rifiuta Utilizzo Convenzione
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-octagon"></i> 
                        Stai per rifiutare questa richiesta di utilizzo. Specifica il motivo del rifiuto.
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-4">Codice Utilizzo:</dt>
                        <dd class="col-sm-8"><code class="fs-5">@Model.CodiceUtilizzo</code></dd>

                        <dt class="col-sm-4">Convenzione:</dt>
                        <dd class="col-sm-8"><strong>@Model.TitoloConvenzione</strong></dd>

                        <dt class="col-sm-4">Dipendente:</dt>
                        <dd class="col-sm-8">@Model.NomeDipendente</dd>
                    </dl>

                    <form asp-action="Rifiuta" method="post">
                        <input type="hidden" asp-for="UtilizzoId" />
                        <input type="hidden" asp-for="CodiceUtilizzo" />
                        <input type="hidden" asp-for="TitoloConvenzione" />
                        <input type="hidden" asp-for="NomeDipendente" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="MotivoRifiuto" class="form-label"></label>
                            <textarea asp-for="MotivoRifiuto" class="form-control" rows="4" 
                                      placeholder="Es: Importo non corrispondente, servizio non erogato, ecc."></textarea>
                            <span asp-validation-for="MotivoRifiuto" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Annulla
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-x-circle-fill"></i> Conferma Rifiuto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
