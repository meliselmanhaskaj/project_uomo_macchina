@model Progetto.Web.Controllers.RegistrazioneDipendenteViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrazione Dipendente - Buoni Digitali</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 2rem;
        }
        .registration-container {
            background: white;
            border-radius: 20px;
            padding: 3rem;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 15px 50px rgba(0,0,0,0.3);
        }
        .registration-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .registration-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.5rem;
        }
        .registration-title {
            font-size: 2rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
        }
        .registration-subtitle {
            color: #666;
            font-size: 1rem;
        }
        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }
        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }
        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 0.9rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 1rem;
        }
        .btn-primary-custom:hover {
            transform: scale(1.02);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .back-link {
            text-align: center;
            margin-top: 1.5rem;
        }
        .back-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }
        .back-link a:hover {
            text-decoration: underline;
        }
        .text-danger {
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <div class="registration-container">
        <div class="registration-header">
            <div class="registration-icon">
                <i class="bi bi-person-plus"></i>
            </div>
            <h1 class="registration-title">Registrazione Dipendente</h1>
            <p class="registration-subtitle">Crea il tuo account per accedere alle convenzioni aziendali</p>
        </div>

        <form method="post" asp-action="Dipendente" novalidate>
        @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label" for="Nome">Nome *</label>
                <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" placeholder="Mario">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Cognome">Cognome *</label>
                <input type="text" class="form-control" id="Cognome" name="Cognome" value="@Model.Cognome" placeholder="Rossi">
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Email">Email *</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="nome.cognome@email.it">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="AziendaId">Azienda *</label>
                <select class="form-select" id="AziendaId" name="AziendaId">
                    <option value="">Seleziona la tua azienda</option>
                    @foreach (var azienda in Model.Aziende)
                    {
                        <option value="@azienda.Id">@azienda.Nome</option>
                    }
                </select>
                <span asp-validation-for="AziendaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Password">Password *</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="••••••••">
                <small class="text-muted">Minimo 4 caratteri</small>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="ConfermaPassword">Conferma Password *</label>
                <input type="password" class="form-control" id="ConfermaPassword" name="ConfermaPassword" placeholder="••••••••">
                <span asp-validation-for="ConfermaPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary-custom">
                <i class="bi bi-check-circle me-2"></i>Registrati
            </button>
        </form>

        <div class="back-link">
            <a href="/">
                <i class="bi bi-arrow-left me-1"></i>Torna alla home
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const nome = document.getElementById('Nome');
            const cognome = document.getElementById('Cognome');
            const email = document.getElementById('Email');
            const aziendaId = document.getElementById('AziendaId');
            const password = document.getElementById('Password');
            const confermaPassword = document.getElementById('ConfermaPassword');
            let isValid = true;

            // Rimuovi messaggi di errore precedenti
            document.querySelectorAll('.validation-error').forEach(el => el.remove());
            document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));

            // Valida Nome
            if (!nome.value.trim()) {
                isValid = false;
                nome.classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'text-danger validation-error small mt-1';
                errorMsg.textContent = 'Inserisci il tuo nome';
                nome.parentElement.appendChild(errorMsg);
            }

            // Valida Cognome
            if (!cognome.value.trim()) {
                isValid = false;
                cognome.classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'text-danger validation-error small mt-1';
                errorMsg.textContent = 'Inserisci il tuo cognome';
                cognome.parentElement.appendChild(errorMsg);
            }

            // Valida Email
            if (!email.value.trim()) {
                isValid = false;
                email.classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'text-danger validation-error small mt-1';
                errorMsg.textContent = 'Inserisci la tua email aziendale';
                email.parentElement.appendChild(errorMsg);
            }

            // Valida Azienda
            if (!aziendaId.value) {
                isValid = false;
                aziendaId.classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'text-danger validation-error small mt-1';
                errorMsg.textContent = 'Seleziona la tua azienda dal menu';
                aziendaId.parentElement.appendChild(errorMsg);
            }

            // Valida Password
            if (!password.value.trim()) {
                isValid = false;
                password.classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'text-danger validation-error small mt-1';
                errorMsg.textContent = 'Crea una password per il tuo account';
                password.parentElement.appendChild(errorMsg);
            }

            // Valida Conferma Password
            if (!confermaPassword.value.trim()) {
                isValid = false;
                confermaPassword.classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'text-danger validation-error small mt-1';
                errorMsg.textContent = 'Conferma la password inserita sopra';
                confermaPassword.parentElement.appendChild(errorMsg);
            } else if (password.value && confermaPassword.value && password.value !== confermaPassword.value) {
                isValid = false;
                confermaPassword.classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'text-danger validation-error small mt-1';
                errorMsg.textContent = 'Le due password non coincidono';
                confermaPassword.parentElement.appendChild(errorMsg);
            }

            if (!isValid) {
                e.preventDefault();
            }
        });
    </script>
</body>
</html>
